# Server Configuration
PORT=3001
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kobarapide?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your_jwt_secret_here_please_change_this

# Admin Account (for initial setup)
ADMIN_EMAIL=admin@kobarapide.com
ADMIN_PASSWORD=change_this_password

# Email Service Configuration (for email verification and password reset)
# Option 1: Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="Kobarapide <noreply@kobarapide.com>"

# Option 2: SendGrid (uncomment to use)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=your_sendgrid_api_key
# EMAIL_FROM="Kobarapide <noreply@kobarapide.com>"

# Option 3: Mailgun (uncomment to use)
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=your_mailgun_username
# EMAIL_PASS=your_mailgun_password
# EMAIL_FROM="Kobarapide <noreply@kobarapide.com>"

# Frontend URL (for email verification and password reset links)
FRONTEND_URL=https://your-frontend-domain.com

# File Upload Configuration (optional)
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)
