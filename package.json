{
  "name": "kobarapide-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:api": "nodemon api/server.js",
    "dev": "npm-run-all --parallel dev:frontend dev:api",
    "install-all": "npm install && npm install --prefix frontend && npm install --prefix api",
    "build:frontend": "npm run build --prefix frontend"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
