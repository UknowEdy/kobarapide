# ========================================
# CONFIGURATION MODE MAINTENANCE - KOBARAPIDE
# ========================================

# Active/désactive le mode maintenance
# true = Mode maintenance ACTIVÉ (site inaccessible, page de maintenance affichée)
# false = Mode maintenance DÉSACTIVÉ (site fonctionnel normalement)
MAINTENANCE_MODE=false

# Token admin pour accéder au site pendant la maintenance (optionnel)
# Décommentez cette ligne pour permettre l'accès admin pendant la maintenance
# ADMIN_MAINTENANCE_TOKEN=votre_token_secret_ici

# ========================================
# COMMENT UTILISER ?
# ========================================

# 1. SUR RENDER (Production) :
#    - Allez dans Dashboard > votre service > Environment
#    - Ajoutez : MAINTENANCE_MODE=true
#    - Le site affichera automatiquement la page de maintenance
#
# 2. EN LOCAL :
#    - Copiez ce fichier : cp .env.maintenance.example .env
#    - Changez MAINTENANCE_MODE=true dans votre .env
#    - Redémarrez le serveur
#
# 3. POUR DÉSACTIVER :
#    - Changez simplement MAINTENANCE_MODE=false
#    - Ou supprimez complètement la variable

# ========================================
# VARIABLES D'ENVIRONNEMENT COMPLÈTES
# ========================================

# Base de données
MONGODB_URI=mongodb+srv://...

# JWT Secret
JWT_SECRET=votre_secret_jwt

# Super Admin
ADMIN_EMAIL=edemkukuz@gmail.com
ADMIN_PASSWORD=admin123

# Mode Maintenance
MAINTENANCE_MODE=false

# Port (optionnel)
PORT=3001

# Node Environment
NODE_ENV=production
